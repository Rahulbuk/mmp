pipeline {
    agent any
    tools {
        jdk 'jdk1.8'
        maven 'localmaven'
    }
    properties([
            [$class: 'JiraProjectProperty'],
            parameters([choice(choices: ['INT', 'TEST'], description: '', name: 'BUILD_ENV')])
    ])
    stages {
        stage('maven-build') {
            steps {
                dir('mmproot') {
                    sh 'mvn clean install'
                    echo ${params.BUILD_ENV}
                }
            }
        }

        stage('call_liquibase-project') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
                submitter "alice,bob"
                parameters {
                    string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
                }
            }
            steps {
                echo "Hello, ${PERSON}, nice to meet you."
            }
        }
    }
}
